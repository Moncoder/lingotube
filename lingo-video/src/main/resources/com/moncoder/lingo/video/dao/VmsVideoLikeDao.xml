<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moncoder.lingo.video.dao.VmsVideoLikeDao">

    <resultMap id="videoLikeVO" type="com.moncoder.lingo.video.domain.vo.VideoLikeVO">
        <id property="id" column="id"/>
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime"/>
        <association property="video" javaType="com.moncoder.lingo.entity.VmsVideo">
            <id property="id" column="id"/>
            <result property="title" column="title"/>
            <result property="videoUrl" column="video_url"/>
            <result property="thumbnailUrl" column="thumbnail_url"/>
            <result property="duration" column="duration"/>
        </association>
    </resultMap>

    <select id="selectPageByUserId" resultMap="videoLikeVO">
        SELECT
        vl.id, vl.create_time,
        v.id, v.title, v.video_url, v.thumbnail_url, v.duration, v.views
        FROM
        vms_video_like vl
        LEFT JOIN
        vms_video v ON vl.video_id = v.id
        WHERE
        vl.user_id = #{userId}
        <if test="titleKeyWord != null and titleKeyWord != ''">
            AND v.title LIKE CONCAT('%', #{titleKeyWord}, '%')
        </if>
        ORDER BY
        vl.create_time DESC
    </select>
</mapper>