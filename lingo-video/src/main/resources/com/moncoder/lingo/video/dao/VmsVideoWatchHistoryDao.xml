<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.moncoder.lingo.video.dao.VmsVideoWatchHistoryDao">

    <resultMap id="videoBrowseHistoryVO" type="com.moncoder.lingo.video.domain.vo.VideoBrowseHistoryVO">
        <id property="id" column="id"/>
        <result property="viewDuration" column="view_duration"/>
        <result property="createTime" column="create_time" javaType="java.time.LocalDateTime"/>
        <association property="video" javaType="com.moncoder.lingo.entity.VmsVideo">
            <id property="id" column="id"/>
            <result property="title" column="title"/>
            <result property="videoUrl" column="video_url"/>
            <result property="thumbnailUrl" column="thumbnail_url"/>
        </association>
    </resultMap>

    <select id="selectPageByUserId" resultMap="videoBrowseHistoryVO">
        SELECT
        h.id,h.view_duration,h.create_time,v.*
        FROM
        vms_video_browse_history h
        LEFT JOIN
        vms_video v ON h.video_id = v.id
        WHERE
        h.user_id = #{userId}
        <if test="titleKeyWord != null and titleKeyWord != ''">
            AND v.title LIKE CONCAT('%', #{titleKeyWord}, '%')
        </if>
        ORDER BY
        h.create_time DESC
    </select>
</mapper>